<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-900 px-10 py-10 text-white">
    <h2 class="text-3xl font-bold text-center mb-8">Latest Scraps</h2>

    <div class="cards grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 justify-center">
        <% posts?.forEach(post => { %>
            <div class="card transform transition-transform duration-300 hover:scale-105 rounded-lg shadow-lg bg-zinc-800 p-4">
                <div class="w-52 h-40 bg-zinc-300 rounded-lg overflow-hidden shadow-md">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= post.image %>" alt="User Uploaded Image">
                </div>
                <h3 class="text-lg font-semibold mt-3 text-white"><%= post.title %></h3>
            </div>
        <% }) %>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script>
    gsap.from(".cards .card", { 
        opacity: 0, 
        y: 50, 
        duration: 0.8, 
        stagger: 0.15, 
        ease: "power2.out"
    });
</script>

