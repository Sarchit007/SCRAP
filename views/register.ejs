<head>
    <!-- Google Fonts De Bambeet -->
    <link href="https://fonts.googleapis.com/css2?family=De+Bambeet&display=swap" rel="stylesheet">
    <style>
        * {
            font-family: 'De Bambeet', cursive;
        }
    </style>
  </head>
  
  <% include ./partials/header.ejs %>
  
  <div class="relative flex justify-center items-center min-h-screen bg-gray-200" 
     style="background-image: url('https://plus.unsplash.com/premium_vector-1689096907767-4cb2a8773a91?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8YWJzdHJhY3R8ZW58MHx8MHx8fDA%3D'); background-size: cover; background-position: center;">
    
    <div class="bg-white p-10 rounded-2xl shadow-xl text-center w-96 transition-all duration-300 ease-in-out hover:shadow-2xl overflow-visible">
        <h2 class="text-2xl font-bold mb-1">Create Your Scrap Account</h2>
        <h3 class="text-lg text-gray-500 mb-4">Join the scrapbook community</h3>
        
        <form class="space-y-4" action="register" method="post">
            <input type="text" placeholder="Full Name" name="name" required class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition-all" />

            <input type="text" placeholder="Username"   name="username" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition-all" />
            <input type="text" placeholder="Contact" name="contact" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition-all" />
            <input type="email" placeholder="Email" name="email" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition-all" />
            <input type="password" placeholder="Password" name="password" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition-all" />
            
            <button class="w-full bg-red-500 text-white py-3 rounded-lg font-semibold text-lg hover:bg-red-600 t">Create Account</button>
  
            <!-- Checkbox for Terms and Conditions -->
            <div class="flex items-center justify-center mt-3">
                <input type="checkbox" id="terms" class="mr-2">
                <label for="terms" class="text-xs text-gray-500">By continuing, you agree to Scrap’s Terms of Service and acknowledge that you’ve read our Privacy Policy.</label>
            </div>
  
            <!-- "Already have an account?" link -->
            <div class="mt-3">
                <a href="/" class="text-sm text-blue-500 hover:underline">Already have an account?</a>
            </div>
  
        </form>
    </div>
  </div>
  
  <% include ./partials/footer.ejs %>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script>
    gsap.from(".bg-white", { opacity: 0, y: -50, duration: 1, ease: "power2.out" });
    gsap.from("h2", { opacity: 0, x: -50, duration: 1, delay: 0.5, ease: "power2.out" });
    gsap.from("h3", { opacity: 0, x: 50, duration: 1, delay: 0.7, ease: "power2.out" });
    gsap.from("form", { opacity: 0, scale: 0.9, duration: 1, delay: 1, ease: "back.out(1.7)" });
    gsap.from(".bg-red-500", { opacity: 0, y: 20, duration: 1, delay: 1.2, ease: "power2.out" });
  </script>
  